<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:orientation="horizontal"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/firstColumn"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="45dp"
        android:layout_height="match_parent"
        app:layout_constraintHorizontal_bias="0.01">

        <TextView
            android:id="@+id/logMonth"
            android:text="MON"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:fontFamily="@font/avenirlight"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:id="@+id/logDay"
            android:text="DD"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:fontFamily="@font/avenirlight"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="185dp"
        android:layout_height="match_parent"
        app:layout_constraintHorizontal_bias="0.35">

        <TextView
            android:id="@+id/logTitle"
            android:text="Title - Category"
            android:textColor="@color/gray"
            android:textSize="17sp"
            android:fontFamily="@font/avenirregular"
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:id="@+id/logType"
            android:text="Deduction/Incoming"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:fontFamily="@font/avenirlight"
            android:layout_marginTop="2dp"
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

    </LinearLayout>

    <LinearLayout

        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="110dp"
        android:layout_height="match_parent"
        app:layout_constraintHorizontal_bias="0.95">

        <TextView
            android:id="@+id/logAmount"
            android:text="000.00"
            android:textColor="@color/gray"
            android:textSize="21sp"
            android:fontFamily="@font/avenirregular"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:id="@+id/logBalance"
            android:text="Balance: 000.00"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:fontFamily="@font/avenirlight"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>