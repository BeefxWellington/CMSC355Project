<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView"
        android:layout_width="407dp"
        android:layout_height="26dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/avenirregular"
        android:text="General"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="5dp" />

    <Button
        android:id="@+id/button_notifsettings"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="start"
        android:layout_marginTop="4dp"
        android:background="@color/white"
        android:fontFamily="@font/avenirregular"
        android:padding="5dp"
        android:text="Notifications"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenirregular"
        android:text="Security"
        android:textSize="25sp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/button_notifsettings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="5dp" />

    <Button
        android:id="@+id/button_usersettings"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="start"
        android:background="@color/white"
        android:fontFamily="@font/avenirregular"
        android:padding="5dp"
        android:textSize="18sp"
        android:text="Change Username"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_passsettings"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="start"
        android:layout_marginBottom="40dp"
        android:background="@color/white"
        android:fontFamily="@font/avenirregular"
        android:padding="5dp"
        android:textSize="18sp"
        android:text="Change Password"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@id/button_usersettings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/signout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="start"
        android:background="@color/white"
        android:fontFamily="@font/avenirregular"
        android:textSize="18sp"
        android:padding="5dp"
        android:text="Sign Out"
        android:onClick="logout"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_passsettings"

        />





</androidx.constraintlayout.widget.ConstraintLayout>
