<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="0dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:background="@drawable/cardviewbg"
        app:cardCornerRadius="15dp"
        android:layout_width="330dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardElevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp">

            <TextView
                android:id="@+id/title"
                android:textColor="@color/red"
                android:text="Month Summary"
                android:textSize="25sp"
                android:fontFamily="@font/avenirregular"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/firstTitle"
                android:text="Starting Balance"
                android:textSize="15sp"
                android:textColor="@color/gray"
                android:fontFamily="@font/avenirregular"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/firstAmount"
                android:text="$000.00"
                android:textSize="30sp"
                android:textColor="@color/red"
                android:fontFamily="@font/avenirregular"
                app:layout_constraintTop_toBottomOf="@+id/firstTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/firstDate"
                android:text="MM/DD/YYYY"
                android:textSize="15sp"
                android:textColor="@color/gray"
                android:fontFamily="@font/avenirlight"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintStart_toEndOf="@id/firstTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/secondTitle"
                android:text="Total Expenses"
                android:textSize="15sp"
                android:textColor="@color/gray"
                android:fontFamily="@font/avenirregular"
                app:layout_constraintTop_toBottomOf="@id/firstAmount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/secondAmount"
                android:text="$000.00"
                android:textSize="30sp"
                android:textColor="@color/red"
                android:fontFamily="@font/avenirregular"
                app:layout_constraintTop_toBottomOf="@+id/secondTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/secondDate"
                android:text="MM/DD/YYYY"
                android:textSize="15sp"
                android:textColor="@color/gray"
                android:fontFamily="@font/avenirlight"
                app:layout_constraintTop_toBottomOf="@id/firstAmount"
                app:layout_constraintStart_toEndOf="@id/secondTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/thirdTitle"
                android:text="Total Expenses"
                android:textSize="15sp"
                android:textColor="@color/gray"
                android:fontFamily="@font/avenirregular"
                app:layout_constraintTop_toBottomOf="@id/secondAmount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/thirdAmount"
                android:text="$000.00"
                android:textSize="30sp"
                android:textColor="@color/red"
                android:fontFamily="@font/avenirregular"
                app:layout_constraintTop_toBottomOf="@+id/thirdTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/thirdDate"
                android:text="MM/DD/YYYY"
                android:textSize="15sp"
                android:textColor="@color/gray"
                android:fontFamily="@font/avenirlight"
                app:layout_constraintTop_toBottomOf="@id/secondAmount"
                app:layout_constraintStart_toEndOf="@id/thirdTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>